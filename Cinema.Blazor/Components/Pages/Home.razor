@page "/"
<PageTitle>Home</PageTitle>

<style>
html, body {
    margin: 0;
    padding: 0;
    overflow: hidden;
    height: 100%;
}
.home-fullscreen {
    position: relative;
    width: 100%;
    height: 100%;
}
.background-layer {
    position: fixed;
    top: 3.5rem;
    left: 250px;
    right: 0;
    bottom: 0;
    z-index: 0;
    overflow: hidden;
}
.background-layer img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.6);
}
.content-layer {
    position: fixed;
    left: 250px;
    right: 0;
    bottom: 27rem;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1;
    color: white;
    padding: 1rem;
}
.overlay {
    background-color: rgba(0, 0, 0, 0.6);
    padding: 2rem 3rem;
    border-radius: 12px;
    max-width: 700px;
    text-align: center;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(6px);
}
.header-text {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 3rem;
}
.description-text {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
    line-height: 1.6;
}
.btn-cinema {
    background-color: #2c5364;
    color: white;
    padding: 0.75rem 1.5rem;
    font-size: 1.1rem;
    border-radius: 8px;
    text-decoration: none;
    transition: background-color 0.3s ease, transform 0.2s ease;
}
.btn-cinema:hover {
    background-color: #203a43;
    color: white;
    transform: scale(1.05);
}
</style>

<div class="home-fullscreen">
    <div class="background-layer">
        <img src="https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?fm=jpg&q=60&w=3000&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8Y2luZW1hfGVufDB8fDB8fHww"
             alt="Cinema Background" />
    </div>

    <div class="content-layer">
        <div class="overlay">
            <div class="row">
                <div class="row flex items-center justify-center">
                    <h1 class="header-text whitespace-nowrap flex flex-row gap-4">
                        🎬 Welcome to Cinema Time
                    </h1>
                </div>
            </div>
            <p class="description-text">
                Cinema Time is your destination for magical movie experiences. Explore upcoming screenings, book your tickets, and enjoy moments that move you.
            </p>
            <a href="/UpcomingScreenings" class="btn-cinema">View Upcoming Screenings</a>
        </div>
    </div>
</div>
